<% provide(:title, @group.name) %>
<% breadcrumb :group, @group %>

<div class="container row">

  <div class="col-md-3 well">
    <div class="group_sidebar">

      <div class="group_pic">
        <img class="img-circle" width="140" height="140" src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a7/Flag_of_Afghanistan_(1880%E2%80%931901).svg/2000px-Flag_of_Afghanistan_(1880%E2%80%931901).svg.png">
      <!-- GROUP_PIC -->
      </div>

      <div class="group_information">
        <div class="group_name"><strong><%= @group.name %></strong></div>
        <div class="group_area"><%= @group.area %></div>
      <!-- GROUP_INFORMATION -->
      </div>

      <div class="group_menu">
        <ul class="nav nav-pills nav-stacked">
          <li class="active"><a  data-toggle="pill" href="#group_forum">Fórum</a></li>
          <li><a data-toggle="pill" href="#group_members">Membros</a></li>
          <% if admin?(@group.id) %>
              <li><a data-toggle="pill" href="#group_configurations">Configurações</a></li>
          <% end %>
          <% if member?(@group.id) %>
              <li>
                <%= link_to "Deixar grupo",  group_member_path(@group),
                                             method: :delete,
                                             data: { confirm: "Você realmente deseja deixar este grupo?" } %>
              </li>
          <% else %>
            <li><%= link_to "Participar",  group_members_path(@group), method: :post %></li>
          <% end %>
        </ul>
      <!-- GROUP_MENU -->
      </div>
    <!-- GROUP_SIDEBAR -->
    </div>

  <!--COL-MD-3 -->
  </div>

  <div class="col-md-9 well group_content tab-content" id="div_id">
    <% if member?(@group.id) %>
      <div class="tab-pane fade in active" id="group_forum">
        <div class="jumbotron narrower"><h3>Fórum</h3></div>
        <!-- GROUP_FORUM -->
      </div>

      <div class="tab-pane fade" id="group_members">
        <%= render :file => '/members/index' %>
        <!-- GROUP_MEMBERS -->
      </div>

      <div class="tab-pane fade" id="group_configurations">
        <%= render :file => 'groups/_edit' %>
        <%#= yield :edit_group %>
        <!-- GROUP_CONFIGURATIONS -->
      </div>
    <% else %>
      <div class="jumbotron"><h3>Apenas membros possuem acesso a este conteúdo</h3></div>
    <% end %>
  <!-- GROUP_CONTENT -->
  </div>

<!-- ROW -->
</div>
