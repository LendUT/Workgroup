<div class="panel panel-default">
  <div class="panel-heading">
    <span>
      <%= "#{comment.created_at} | " %>
      <%= link_to comment.user.name, comment.user %>
    </span>
  </div>
  <div class="panel-body" style="background-color: white;">
    <% if @task.updated_at != @task.created_at %>
      <div class="panel-footer clearfix">
        <span class="pull-right"><%= "Editado em: #{comment.updated_at}" %></span>
      </div>
    <% end %>

    <p><%= comment.content %></p>
  </div>
  <div class="panel-footer clearfix">
      <span class="panel-title ">
        <a class="pull-right" data-toggle="collapse" href="#collapse<%= comment.id %>">
          Responder
        </a>
      </span>
      <br>
      <div id="collapse<%= comment.id %>" class="panel-collapse collapse">
        <%= render :partial => '/comments/new',
                   :locals => { comment_id: comment.id } %>
      </div>
  </div>
</div>
