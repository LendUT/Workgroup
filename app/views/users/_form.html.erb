<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name, "Nome" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :course, "Curso" %>
  <%= f.text_field :course, class: 'form-control' %>

  <%= f.label :organization, "Organização" %>
  <%= f.text_field :organization, class: 'form-control' %>

  <%= f.label :password, "Senha" %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation, "Confirmação" %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.submit button_text, class: "btn btn-primary" %>
<% end %>
