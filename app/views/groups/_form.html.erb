<%= form_for(@group, method: :put,:remote => ajax_boolean) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name, "Nome do Grupo" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :area, "Área de Interesse" %>
  <%= f.text_field :area, class: 'form-control' %>

  <%= f.label :description, "Descrição" %>
  <%= f.text_area :description, class: 'form-control' %>

  <br/>
  <%= f.label :private, class: "checkbox inline" do %>
    <%= f.check_box :private, {}, "true", "false" %>
    <span>Privado</span>
  <% end %><br/>

  <%= f.submit button_text, class: "btn btn-primary" %>
<% end %>
