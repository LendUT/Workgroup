<%= form_for(@task, :url => {:controller => "tasks", :action => action_type}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.hidden_field :active, value: true, class: 'form-control' %>

  <%= f.label :title, "Título" %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :priority, "Prioridade" %>
  <%= f.select(:priority, options_for_select(priorities_options, selected_key = "Normal"),
                          {}, { class: 'form-control' }) %>

  <%= f.label :deadline, "Data de encerramento" %>
  <%= f.datetime_field :deadline,  min: Time.now, class: 'form-control' %>

  <%= f.label :description, "Descrição" %>
  <%= f.text_area :description, class: 'form-control' %>

  <%= f.submit button_text, class: "btn btn-primary" %>
<% end %>
