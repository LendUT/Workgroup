<% comment = Comment.find(comment) %>
<%= Time.now %>
<% if current_user.voted_as_when_voted_for(comment).nil? %>
  <%= link_to '', vote_up_path(comment), class: "glyphicon glyphicon-thumbs-up upvote-comment", method: :get, remote: true,data: { type: :json } %>
  <%= link_to '', vote_down_path(comment), class: "glyphicon glyphicon-thumbs-down downvote-comment", method: :get, remote: true,data: { type: :json } %>
<% elsif current_user.voted_up_on?(comment) %>
  <%= link_to '', vote_up_path(comment), class: "glyphicon glyphicon-green glyphicon-thumbs-up upvote-comment", method: :get, remote: true,data: { type: :json } %>
  <%= link_to '', vote_down_path(comment), class: "glyphicon glyphicon-thumbs-down downvote-comment", method: :get, remote: true,data: { type: :json } %>
<% else %>
  <%= link_to '', vote_up_path(comment), class: "glyphicon glyphicon-thumbs-up upvote-comment", method: :get, remote: true,data: { type: :json } %>
  <%= link_to '', vote_down_path(comment), class: "glyphicon glyphicon-red glyphicon-thumbs-down downvote-comment", method: :get, remote: true,data: { type: :json } %>
<% end %>
